<!doctype html>
<html class="no-js" lang="en-GB">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ metadata.title }}{% if title %} | {{ title }}{% endif %}</title>

    {% if global.fonts %}
      {% for font in global.fonts %}
        <link rel="preload" href="{{ font.path }}" as="font" type="font/woff2" crossorigin="anonymous">
      {% endfor %}
    {% endif %}

    {#
      The `data-inline` attribute is used by the gulp `inlineCritial` task.
      The order of JS and CSS is important here; `head.js` doesn't rely on
      the CSSOM so we load it before our styles so that it executes straight away.
    #}
    <script src="/js/head.js" data-inline></script>
    <link href="/css/main.css" rel="stylesheet" type="text/css" data-inline>

    <link rel="canonical" href="{{ metadata.url }}">
    <meta name="description" content="{{ metadata.description }}">

    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
    <link rel="manifest" href="/assets/favicons/site.webmanifest">
    <link rel="mask-icon" href="/assets/favicons/safari-pinned-tab.svg" color="#272b3b">
    <link rel="shortcut icon" href="/assets/favicons/favicon.ico">
    <meta name="apple-mobile-web-app-title" content="reecelucas.com">
    <meta name="application-name" content="reecelucas.com">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-config" content="/assets/favicons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <meta property="og:title" content="{{ metadata.title }}{% if title %} | {{ title }}{% endif %}" />
    <meta property="og:site_name" content="{{ metadata.title }}{% if title %} | {{ title }}{% endif %}" />
    <meta property="og:description" content="{{ metadata.description }}" />
    <meta property="og:url" content="{{ metadata.url }}" />
    <meta property="og:image" content="{{ metadata.url }}{{ metadata.social_share_image }}" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ metadata.title }}{% if title %} | {{ title }}{% endif %}" />
    <meta name="twitter:description" content="{{ metadata.description }}" />
    <meta name="twitter:url" content="{{ metadata.url }}" />
    <meta name="twitter:image" content="{{ metadata.url }}{{ metadata.social_share_image }}" />
    <meta property="twitter:site" content="{{ metadata.author.handle }}" />
  </head>

