<div class="[ o-banner o-banner--spaced-lrg ]">
  <div class="o-wrapper">
    <h1 class="c-profile-title">{{ hero.title | safe }}</h1>
  </div>

  <div class="o-wrapper o-wrapper--no-pad">
    <div class="o-layout o-layout--no-gutter o-layout--col:2@med">
      <div class="o-wrapper">
        <div class="c-profile-image">
          <div class="o-ratio o-ratio--3:4">
            <img
              class="o-ratio__content"
              src="{{ profile.img.src }}"
              alt="{{ profile.img.alt }}"
            >
          </div>
        </div>
      </div>

      <div class="o-wrapper c-profile-copy">
        {% for paragraph in profile.paragraphs %}
          <p>{{ paragraph | preventOrphan | safe }}</p>
        {% endfor %}
      </div>
    </div>
  </div>
</div>