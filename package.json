{
  "name": "reecelucas.com",
  "version": "1.0.0",
  "description": "The website of @reecelucas",
  "main": "n/a",
  "author": "Reece Lucas <reecelucas@sky.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reecelucas/reecelucas.com.git"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "start": "parcel src/index.html",
    "build": "yarn clean && parcel build src/index.html && yarn assests && serve dist",
    "build:server": "yarn clean && parcel build src/index.html && yarn assests",
    "assests": "yarn assets:copy && yarn assets:postprocess",
    "assets:copy": "cp -a static/. dist/",
    "assets:postprocess": "node scripts/post-processing.js",
    "lint": "tslint 'src/scripts/**/*.ts' & stylelint 'src/styles/**/*.scss'",
    "format": "prettier --write 'src/scripts/**/*.ts'"
  },
  "dependencies": {
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-scss": "^3.5.4",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "cssnano": "^4.1.10",
    "husky": "^1.3.1",
    "inline-source": "^6.1.9",
    "posthtml": "^0.11.3",
    "posthtml-include": "^1.2.0",
    "purify-css": "^1.2.5",
    "sass": "^1.17.2",
    "sass-mq": "^5.0.0",
    "uncss": "^0.16.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  }
}
